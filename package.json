{
  "name": "ai-shorts-generator",
  "version": "2.2.4",
  "description": "AI Shorts Generator — automatic short video creation powered by Groq, Whisper, and PlayHT.",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start": "npm install --omit=dev && bash ./start-server.sh",
    "build": "node build.js",
    "test": "node test.js",
    "lint": "eslint .",
    "prepare": "npm run lint --if-present && npm run build --if-present",
    "postinstall": "npm rebuild"
  },
  "engines": {
    "node": ">=25.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "axios": "^1.7.5",
    "chalk": "^5.3.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "form-data": "^4.0.4",
    "groq-sdk": "^1.17.2",
    "morgan": "^1.10.0",
    "node-fetch": "^3.3.2",
    "p-limit": "^5.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.14.2"
  },
  "devDependencies": {
    "eslint": "^9.11.1",
    "nodemon": "^3.1.5"
  },
  "keywords": [
    "ai",
    "shorts",
    "groq",
    "video-generator",
    "youtube",
    "tiktok",
    "whisper",
    "tts"
  ],
  "license": "MIT",
  "author": "Théo",
  "repository": {
    "type": "git",
    "url": "https://github.com/theot44240-tech/Ai-video-generator"
  },
  "render": {
    "startCommand": "npm start",
    "buildCommand": "npm install",
    "env": {
      "NODE_ENV": "production"
    }
  }
}
