{
  "name": "ai-shorts-generator",
  "version": "2.0.1",
  "description": "AI Shorts Generator — Ultra-Stable, Top 0.1% deployment-ready, Node 25+",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "start": "bash ./start-server.sh",
    "dev": "nodemon --watch './**/*.js' --exec 'node --experimental-specifier-resolution=node index.js'",
    "clean": "rm -rf node_modules package-lock.json && npm cache clean --force",
    "reinstall": "npm run clean && npm install",
    "lint": "eslint . --ext .js",
    "test": "echo 'No tests defined' && exit 0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^1.1.1",
    "express": "^4.18.2",
    "form-data": "^4.0.1",
    "google-tts-api": "^2.0.1",
    "openai": "^4.9.0",
    "pydub": "^0.25.1",
    "uuid": "^9.0.0",
    "winston": "^3.10.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.3",
    "eslint": "^8.44.0"
  },
  "author": "Théo",
  "license": "MIT"
}
